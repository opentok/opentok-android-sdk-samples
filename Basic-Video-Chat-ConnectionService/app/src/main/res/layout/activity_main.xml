<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <FrameLayout
        android:id="@+id/videoLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Video feeds -->
        <FrameLayout
            android:id="@+id/subscriber_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <FrameLayout
            android:id="@+id/publisher_container"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="#CCCCCC"
            android:padding="2dp"
            android:visibility="invisible"/>

        <!-- Overlay UI elements -->

        <TextView
            android:id="@+id/callStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:padding="20dp"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/participantNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:padding="20dp"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/outgoing_call_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginBottom="24dp"
            android:orientation="vertical"
            android:visibility="visible">

            <Button
                android:id="@+id/button_call_fcm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:onClick="onIncomingCallButtonClick"
                android:text="Incoming call" />

            <Button
                android:id="@+id/button_call_simulate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onOutgoingCallButtonClick"
                android:text="Outgoing Call" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/incoming_call_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="48dp"
            android:orientation="horizontal"
            android:visibility="invisible">

            <Button
                android:id="@+id/accept_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:backgroundTint="#4CAF50"
                android:onClick="onAcceptIncomingCall"
                android:text="Accept" />

            <Button
                android:id="@+id/reject_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#E91E63"
                android:onClick="onRejectIncomingCall"
                android:text="Reject" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/audio_devices_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:orientation="horizontal"
            android:visibility="invisible"
            android:layout_marginTop="48dp"
            android:layout_marginStart="10dp">
            <Button
                android:id="@+id/show_audio_devices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#E91E63"
                android:onClick="onShowAudioDevicesButtonClick"
                android:text="Show audio devices" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/end_call_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginBottom="48dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal"
            android:visibility="invisible">
            <Button
                android:id="@+id/finish_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#E91E63"
                android:onClick="onHangUpButtonClick"
                android:text="HangUp" />

            <Button
                android:id="@+id/button_is_on_hold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onUnHoldButtonClick"
                android:text="Unhold call"
                android:visibility="invisible"/>
        </LinearLayout>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
